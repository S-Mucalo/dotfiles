# The following are default values for all accounts
defaults
tls on
tls_starttls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
auth on
logfile /tmp/msmtp.log
syslog off

account ohm
host my.ohmportal.de
port 465
tls_starttls off
from eglausa45793@th-nuernberg.de
user eglausa45793
passwordeval $HOME/.dotfiles/mail/bin/msmtp-gnome-tool.py -g -u eglausa45793 -e th-nuernberg.de

account gmail
host smtp.gmail.com
port 587
from sascha.eglau@gmail.com
user sascha.eglau@gmail.com
passwordeval $HOME/.dotfiles/mail/bin/msmtp-gnome-tool.py -g -u sascha.eglau -e gmail.com

account default : gmail
