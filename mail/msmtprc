# The following are default values for all accounts
defaults
tls on
tls_starttls on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
auth on
logfile /tmp/msmtp.log
syslog off

account university
host exchange.canterbury.ac.nz
port 465
tls_starttls off
from shaun.mucalo@pg.canterbury.ac.nz
user spm105
passwordeval $HOME/.dotfiles/mail/bin/msmtp-gnome-tool.py -g -u spm105 -e th-nuernberg.de

account gmail
host smtp.gmail.com
port 587
from shaunmucalo@gmail.com
user shaunmucalo@gmail.com
passwordeval $HOME/.dotfiles/mail/bin/msmtp-gnome-tool.py -g -u shaunmucalo -e gmail.com

account default : gmail
